
<div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <%= link_to match, class: "match-fixture" do %>
        <div class="well match">
            <div class="row">
                <div class="col-xs-2">
                    <%= image_tag match.first_team.logo, width: "45", height: "35" %>
                </div>

                <div class="col-xs-3">
                    <span class="down">
                        <span class="font-big"><%= names[0] %><span>
                    </span>
                </div>

                <div class="col-xs-2">
                    <span>
                        <!-- Match has ended, so display the score -->
                        <% if match.ended? %>
                            <%= match.live_scores.last.teamone_goals %>&nbsp;&nbsp;-&nbsp;
                            <%= match.live_scores.last.teamtwo_goals %>
                        <%else %>
                        Vs
                        <% end %>
                    </span>
                </div>

                <div class="col-xs-3">
                    <span class="down">
                        <span class="font-big"><%= names[1] %></span>
                    </span>
                </div>

                <div class="col-xs-2">
                    <%= image_tag match.opponent_team.logo, width: "50", height: "35" %>
                </div>

    
            </div> <!-- end of row -->
        </div> <!-- /well -->
    <% end %>
</div> <!-- end of column -->
