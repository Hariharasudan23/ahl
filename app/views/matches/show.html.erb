<div class="container">
    <!--<div class="row">
        <p class="space"></p>
        <div class="col-xs-12">
            <h2 class="text-primary text-center">Match&nbsp;<%= @match.id %></h2>
        </div>
    </div>--> <!--end of row -->

<div class="jumbotron match-title">
    <div class="row">
        <div class="col-xs-5 col-sm-2 col-sm-offset-3 team-photo">
            <%= image_tag @first_team.logo, height: 150%>
        </div>

        <div class="col-xs-2 versus text-big">
            Versus
        </div>

        <div class="col-xs-5 col-sm-2 team-photo">
            <%= image_tag @opponent_team.logo, height: 150 %>
        </div>
    </div> <!-- /jumbotron -->
    </div>  <!-- /row -->
    <div class="row">
        <div class="col-xs-5 col-sm-2 col-sm-offset-3">
            <%= image_tag @first_team_captain.photo, class: "img-responsive"%><br>
            <div class="text-center">
                <%= @first_team_captain.name %>
            </div>
        </div>


        <div class="col-xs-5 col-xs-offset-2 col-sm-2">
            <%= image_tag @opponent_team_captain.photo, class: "img-responsive"%><br>
            <div class="text-center">
                <span><%= @opponent_team_captain.name %></span>
            </div>
        </div> <!--end of column -->
    </div> <!-- end of row -->

    <div class="row row-content">
        <p class="space"></p>
        <div class="col-xs-12 col-sm-5">
            <%= render @first_team %>
        </div>


        <div class="col-xs-12 col-sm-5 col-sm-offset-1">
            <%= render @opponent_team %>
        </div> <!-- End of column -->
	</div> <!-- End of row -->


<!-- Space to display the result -->
    <% if @man_of_the_match %>
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <div class="well">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-3 col-sm-4 col-sm-offset-1">
                                <%= image_tag @match.first_team.logo,width: "40", height: "25", class: "livescore-style" %>
                                <%= @match.first_team.name %>
                            </div>

                            <div class="col-xs-5 col-xs-offset-1 col-sm-2 col-sm-offset-0">
                                <span class="text-pink text-big">
                                    <!--<strong><%#= @final_score.teamone_goals %></strong>&nbsp;&nbsp;-&nbsp;
                                    <strong><%#= @final_score.teamtwo_goals%></strong>-->
                                </span>
                            </div>

                            <div class="col-xs-3 col-sm-4">
                                    <%= image_tag @match.opponent_team.logo,height: "25", width: "40", class: "livescore-style" %>
                                    <%= @match.opponent_team.name %>
                            </div>
                        </div> <!-- end of row -->
                    </div> <!-- end of panel body -->
                </div>
            </div> <!-- /column -->
        </div> <!-- /row -->
    <% end %>


    <!-- Space for man of the match -->
    <% if @man_of_the_match %>
        <div class="row">
            <p class="space"></p>
            <div class="col-xs-12 col-sm-4 col-sm-offset-4">
                <div class="panel panel-danger">
    				<div class="panel-heading text-center text-danger">
    					<h3>Man of the match</h3>
    				</div>

    				<div class="panel-body">
    					<%= image_tag @man_of_the_match.photo, class: "img-responsive" %>
    				</div>

    				<div class="panel-footer text-center text-pink">
    					<%= @man_of_the_match.name %>
    				</div>

    			</div> <!-- /panel -->
            </div> <!-- /column -->
        </div> <!-- /row -->
    <% end %>

    <div class="row">
        <p class="space"></p>
        <div class="col-xs-12">
            <h3 class="text-primary text-center">Live Commentary</h3>
            <p class="space"></p>
            <!--Live scores to be displayed here -->
            <% if @live_scores.count == 0 %>
                <div class="text-center">
                    <em>Match hasn't started yet</em>
                </div>
            <% end %>
            <% @live_scores.each do |live_score| %>
                    <div class="well">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-3 col-sm-4 col-sm-offset-1">
                                    <%= image_tag live_score.match.first_team.logo,width: "40", height: "25", class: "img-responsive livescore-style" %>
                                    <%= live_score.match.first_team.name %>
                                </div>

                                <div class="col-xs-5 col-xs-offset-1 col-sm-2 col-sm-offset-0">
                                    <span class="text-pink text-big">
                                        <strong><%= live_score.teamone_goals %></strong>&nbsp;&nbsp;-&nbsp;
                                        <strong><%= live_score.teamtwo_goals%></strong>
                                    </span>
                                </div>

                                <div class="col-xs-3 col-sm-4">
                                        <%= live_score.match.opponent_team.name %>
                                        <%= image_tag live_score.match.opponent_team.logo,height: "25", width: "40", class: "img-responsive livescore-style" %>
                                </div>
                            </div> <!-- end of row -->
                        </div> <!-- end of panel body -->

                        <div class="panel-footer text-center">
                            <strong><span class="comment"><%= live_score.commentary %></span></strong>
                        </div>
                    </div> <!-- end of well -->
            <% end %>
        </div> <!-- end of column -->
    </div><!-- end of row -->


</div> <!-- end of container -->
