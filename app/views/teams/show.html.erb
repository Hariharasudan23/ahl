<p id="notice"><%= notice %></p>
<div class="modal fade" id="player-modal">
</div>
<div class="container">
	<div class="row row-content">
		<div class="col-xs-12 col-sm-4 font-big">
			<p>
			  <%= @team.name %>
		  </p>
		</div>
		<div class="col-xs-12 col-sm-4">
			<p>
			  <strong><%= @team.motto %></strong>
			</p>
		</div>
		<div class="col-xs-12 col-sm-4">
			<p>
			  <strong>Points:</strong>
			  <strong><%= @team.points %></strong>
			</p>
		</div>
	</div>

<!-- This row is for the team squad -->
	<div class="row row-content">
		<div class="col-xs-12 col-sm-6">
			<% @team.players.each do |player| %>
				<div class="col-xs-6 col-sm-2">
					<div class="thumbnail player-image">
						<%=link_to image_tag(player.photo), player_path(player) , remote: true %>
					</div>
				</div> <!--End of inner column -->
			<% end %>
		</div> <!--End of outer column -->
		<!-- Start of stats -->
		<div class="col-xs-12 col-sm-6">
				<table class="table table-condensed table-responsive table-striped stats-table" id="stats-table">
					<thead>
						<tr>
							<th>Team / Stats</th>
							<th>Games</th>
							<th>Goals Scored</th>
							<th>Goals Against</th>
						</tr>
					</thead>

					<tbody>
						<% @other_teams.each do |opponent_team| %>
						<tr>
							<th> <%= opponent_team.name %> </th>
							<td><%= @team.matches opponent_team.id %></td>
							<td><%= @team.goals_scored opponent_team.id %></td>
							<td><%= opponent_team.goals_scored @team.id %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
	</div><!--End of second column -->
	</div> <!--End of second row  -->


	<div class="row row-content">
		<h3>Squad</h3>
		<div class="col-xs-12 col-sm-6">
			<table class="table table-condensed table-responsive table-striped players-table">
				<thead>
					<tr>
						<th>Name</th>
						<th>Age</th>
						<th>Position</th>
						<th>Goals</th>
						<th>
							<div id="green-card" class="card"></div>
						</th>
						<th>
							<div id="yellow-card" class="card"></div>
						</th>
						<th>
							<div id="red-card" class="card"></div>
						</th>
					</tr>
				</thead>

				<tbody>
					<% @team.players.each do |player| %>
					<tr>
						<td><%= player.name %></td>
						<td><%= player.age %></td>
						<td><%= player.position %></td>
						<td><%=player.goals%></td>
						<td><%=player.green_cards%></td>
						<td><%=player.yellow_cards%></td>
						<td><%=player.red_cards%></td>
					</tr>
					<% end %>
				</tbody>

			</table>
		</div> <!-- End of column -->
	</div> <!-- End of third row -->

	<div class="row">
		<div class="col-xs-12 col-sm-4">
			<div class="well">
				<div class="circle green-circle">
					W
				</div>
				<div class="circle yellow-circle">
					D
				</div>
				<div class="circle red-circle">
					L
				</div>
				<div class="circle green-circle">
					W
				</div>
				<div class="circle red-circle">
					L
				</div>
				<div class="circle yellow-circle">
					D
				</div>
			</div>
		</div>

		<!-- -->

		<div class="col-xs-12 col-sm-4">
			Captain
		</div>

		<div class="col-xs-12 col-sm-4">
		</div>
	</div>
</div>
