<!-- Code for displaying the ahl logo -->
<div class="container">
    <div class="row">
        <div class="col-xs-4 col-sm-2">
            <%= link_to image_tag("ahl_logo.jpg", width: "165", height: "165", alt: "AHL logo", id: "ahllogo"), root_path %>
        </div>

        <div class="col-xs-7 col-sm-5 left-border">
            <%= link_to root_path do %>
