      <ul class="nav navbar-nav center-links">
        <li>
          <%= link_to "HOME", root_path %>
        </li>
        <li>
          <%= link_to "ABOUT", static_pages_about_path %>
        </li>
        <li><%= link_to "NEWS", reports_path %></li>
        <!-- Dropdown for teams -->
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">TEAMS <span class="glyphicon glyphicon-chevron-down"></span></a>
            <ul class="dropdown-menu">
              <% teams = Team.all %>
              <% teams.each do |team| %>
                    <li>
                        <%= link_to titlecase(team.name), Team.friendly.find(team.id) %>
