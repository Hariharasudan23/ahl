<div class="container">
  <%if notice %>
    <div class="alert alert-info"><%= notice %></div>
  <% end %>

  <%= link_to 'New Report', new_report_path, class: 'btn btn-primary',
    target: '_blank' %>
  <h1>Reports</h1>

  <table class="table table-striped table-condensed table-hover table-responsive">
    <thead>
      <tr>
        <th>Id</th>
        <th>Caption</th>
        <th>Image</th>
        <th>Article</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reports.each do |report| %>
        <tr>
          <td><%= report.id %></td>
          <td><%= report.caption %></td>
          <td><%= image_tag report.image_url, width: '30' %></td>
          <td><%= html(report.article[0..300]) %></td>
          <td>
            <%= link_to 'Check', report, target: '_blank' %>
          </td>
          <td>
            <%= link_to 'Edit', edit_report_path(report), target: '_blank' %>
          </td>
          <td>
            <%= link_to 'Destroy', report, method: :delete,
              data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
