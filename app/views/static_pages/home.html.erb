<div class="container">
    <div class="row ridge-border">
        <div class="col-xs-12 col-sm-6">
            <div class="jumbotron text-center banner">
                <div class="container font-big">
                    <p>Welcome to <span class="title-style">Anna Hockey League'16</span></p>
                    <p>One-of-a-kind league promoting hockey in Chennai</p>
                </div>
            </div> <!-- jumbotron -->
        </div> <!-- end of first column -->

        <div class="col-xs-10 col-xs-offset-1 col-sm-5 col-sm-offset-0">
            <div class="panel panel-danger" id="liveScoreArea">
                <div class="panel-heading text-center live-score-heading">
                    <h3>Live Score</h3>
                </div>
                <% if @live_score %>
                    <%= render @live_score %>
                <% else %>
                    <!-- If a match has ended, this will be the template -->
                    <div class="panel-body">
                        <div class="text-center">
                            <%= image_tag @current_match.first_team.logo,width: "40", height: "25", class: "img-responsive livescore-style" %>
                            <%=  short_form @current_match.first_team.name %>&nbsp;&nbsp;

                            <span class="text-pink">
                                <%= 0 %>
                            </span>&nbsp;-&nbsp;

                            <span class="text-pink">
                                <%= 0 %>&nbsp;&nbsp;
                            </span>
                            <%=  short_form @current_match.opponent_team.name %>
                            <%= image_tag @current_match.opponent_team.logo,height: "25", width: "40", class: "img-responsive livescore-style" %>
                        </div>
                        <div>
                            <%= link_to "GO TO MATCH CENTER", @current_match , class: "btn btn-block btn-danger" %>
                        </div>
                    </div>

                    <div class="panel-footer">
                        <marquee>
                            <span id="commentary" class="text-pink">
                                Match hasn't started yet
                            </span>
                        </marquee>
                    </div>

                <% end %>
            </div> <!--  End of panel -->
        </div> <!-- end of second column -->


    </div> <!-- end of first row -->


    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <h2> In the News </h2>
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                  <!-- Indicators -->
              <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
              </ol>

                  <!-- Wrapper for slides -->

                  <div class="carousel-inner" role="listbox">
                     <% @reports.each_with_index do |report, index| %>
                            <% if index == 0 %>
                                <div class="item active">
                            <% else %>
                                <div class="item">
                            <% end %>
                                    <%= link_to (image_tag report.image, alt: "Image missing", toggle: "tooltip", placement: "top", title: "Click to read the full article"), report %>
                                    <div class="carousel-caption">
                                        <h4><%= report.caption %></h4>
                                    </div>
                                </div>
                      <% end %>
                  </div> <!-- Carousel-inner -->
                  <!-- Controls -->
                  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
              </div> <!-- end of carousel -->
    </div> <!-- end of column -->

    <div class="col-xs-12 col-sm-5">

        <h2 class="text-center">Leaderboard</h2>
        <table class="table table-responsive table-striped leaderboard">
            <thead>
                <tr>
                    <th>Team</th>
                    <th>Points</th>
                </tr>
            </thead>

            <tbody>
                <% @teams.each do |team| %>
                    <tr>
                        <td> <%= team.name %> </td>
                        <td> <%= team.points %> </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    </div> <!-- row-->



    <!-- Row for displaying the top scorers-->
    <%if @matches_ended > 0 %>
    <div class="row ridge-border">
        <p class="space"></p>
        <div class="col-xs-12 text-center">
            <h2>Top Scorers</h2>
            <br>
        </div>

        <p class="space"></p>
        <% @top_scorers.each do |top_scorer| %>
            <div class="col-xs-12 col-sm-3">
                <div class="panel panel-warning">
                    <div class="panel-heading text-center">
                        <span class="text-black"><%= top_scorer.name %></span>
                        <span class="pull-right font-big"><%= top_scorer.goals_count %></span>
                    </div>

                    <div class="panel-body">
                        <%= image_tag top_scorer.photo, class: "img-responsive" %>
                    </div>

                    <div class="panel-footer text-center">
                        <%= link_to top_scorer.team, class: "team-link" do %>
                            <span class="text-pink"><%= top_scorer.team.name %></span>
                        <% end %>
                    </div>
                </div> <!--  end of panel -->
            </div> <!-- end of column -->
        <% end %>
    </div> <!--  End of row -->
<% end %>

