<div class="container">
    <div class="row ridge-bottom">
        <div class="col-xs-12 col-sm-6">
            <div class="row first-row">
                <h3 class="column-heading">Snapshots</h3>
                <div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel">
                      <!-- Indicators -->
                  <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                  </ol>

                      <!-- Wrapper for slides -->

                      <div class="carousel-inner" role="listbox">
                         <% @photos.each_with_index do |photo, index| %>
                                <% if index == 0 %>
                                    <div class="item active">
                                <% else %>
                                    <div class="item">
                                <% end %>
                                <%= image_tag photo.photo_url, alt: "match photo" %>
                                    </div>
                          <% end %>
                      </div> <!-- Carousel-inner -->

                      <!-- Controls -->
                      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left green-back" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                      </a>

                      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right green-back" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                      </a>
                  </div> <!-- end of carousel -->
                  </div> <!-- nested first row -->

                  <div class="row">
                      <div class="col-xs-12 col-sm-12 first-row">
                          <h3 class="column-heading">Articles</h3>
                          <div id="news">
                                <ul>
                                  <% @reports.each do |report| %>
                                    <li>
                                        <%= simple_format(report.article[0..130]) %>
                                        <%= link_to "Read more", report %>
                                    </li>
                                  <% end %>
                              </ul>
                        </div>
                      </div> <!-- end of column -->
                </div>
        </div> <!-- end of first column -->

        <div class="col-xs-10 col-xs-offset-1 col-sm-5 col-sm-offset-0">
                <h3 class="column-heading">Live Score</h3>
            <div class="panel panel-danger" id="liveScoreArea">
                <% if @live_score %>
                    <%= render @live_score %>
                <% else %>
                    <!-- If a match has ended, this will be the template -->
                    <div class="panel-body">
                        <div class="row">
                        <div class="col-xs-2">
                            <%= image_tag @current_match.first_team.logo,width: "40", height: "25", class: "img-responsive livescore-style" %>
                        </div>
                        <div class="col-xs-3 set-down">
                            <%=  @current_match.first_team.name %>
                        </div>
                        <div class="col-xs-2 set-down">
                            <span class="text-pink">
                                &nbsp;&nbsp;0&nbsp;&nbsp;-&nbsp;&nbsp;0
                            </span>
                        </div>
                        <div class="col-xs-3 set-down">
                            <%= @current_match.opponent_team.name %>
                        </div>

                        <div class="col-xs-2">
                            <%= image_tag @current_match.opponent_team.logo,height: "25", width: "40", class: "img-responsive livescore-style" %>
                        </div>
                    </div>
                    <br>
                        <div class="text-center">
                            <%= link_to @current_match, class: "btn btn-block btn-danger match-button" do%>
                                GO TO MATCH CENTER&nbsp;<span class="glyphicon glyphicon-chevron-right"></span>
                            <% end %>
                        </div>

                    </div>
                    <div class="panel-footer">
                    <div class="comment-marquee">
                            <span class="text-pink">
                                Match hasn't started yet
                            </span>
                    </div>
                    </div>

                <% end %>
            </div> <!--  End of panel -->
            <!-- Static images for top scorers -->
            <div class="row">

                <!-- Leaderboard -->
                <div class="col-xs-12">
                    <h3 class="column-heading">Leaderboard</h3>
                    <table class="table table-responsive table-striped leaderboard">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Team</th>
                                <th>Points</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% @teams.each do |team| %>
                                <tr>
                                    <td> <%= image_tag team.logo, width: "30", height: "20" %></td>
                                    <td> <%= team.name %> </td>
                                    <td> <%= team.points %> </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>

                <!--  Top scorers -->
                <div class="col-xs-12">
                    <% if @matches_ended > 2 %>
                    <h3 class="column-heading">Top Scorers</h3>
                    <% else %>
                    <h3 class="column-heading">Top Scorers - 2015</h3>
                    <% end %>
                    <p class="space"></p>
                </div>
                    <!-- Top scorers of 2015 and 2016 -->
                    <% if @matches_ended > 0 %>
                        <%= render 'top_scorers', players: @top_scorers %>
                    <% else %>
                        <%= render 'previous_top_scorers' %>
                    <% end %>



            </div> <!-- /nested row -->

        </div> <!-- end of second column -->


    </div> <!-- end of first row -->


