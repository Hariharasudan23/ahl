<% players = [{name: "Sunil", goals: 20, team: "Ruffianz", image: "unknown.jpg"},
                {name: "Giri", goals: 16, team: "Ruffianz", image: "unknown.jpg"},
                {name: "Vijay", goals: 11, team: "Warriors", image: "unknown.jpg"}]
%>

<% players.each do |player| %>
    <div class="col-xs-12 col-sm-4">
        <div class="panel panel-warning previous_top_scorers">
            <div class="panel-heading text-center">
                <span class="text-black"><%= player[:name] %></span>
                <span class="badge pull-right"><%= player[:goals] %></span>
            </div>

            <div class="panel-body">
                <%= image_tag player[:image], class: "img-responsive" %>
            </div>

            <div class="panel-footer text-center">
                <div class="team-link">
                    <span class="text-pink"><%= player[:team] %></span>
                </div>
            </div> <!-- /panel footer -->
        </div> <!--  end of panel -->
    </div>
<% end %>
