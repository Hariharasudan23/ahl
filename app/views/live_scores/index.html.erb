<div class="container">
    <div class="row">

        <% if notice %>
            <div class="alert alert-info"><%= notice %></div>
        <% elsif alert %>
            <div class="alert alert-danger"> <%= alert %> </div>
        <% end %>
        <div class="col-xs-12 col-sm-3">
            <h1 class="text-primary">Live Scores for match&nbsp; <%= @match.id %></h1>
        </div>

        <div class="col-xs-12 col-sm-8 col-sm-offset-1">
            <%= render 'form' %>
        </div>
    </div>

    <p class="space"></p>
    <div class="row">

            <table class="table table-condensed table-responsive table-hover">
              <thead>
                <tr>
                    <th><%= @match.first_team.name %></th>
                    <th><%= @match.opponent_team.name %></th>
                    <th>Commentary</th>
                    <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @live_scores.each do |live_score| %>
                  <tr>
                      <td><%= live_score.teamone_goals %></td>
                      <td><%= live_score.teamtwo_goals %></td>
                      <td><%= live_score.commentary %></td>

                    <td><%= link_to 'Destroy', [@match, live_score],  method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

        </div> <!-- /col -->
    </div> <!-- /row -->
</div> <!-- container -->
