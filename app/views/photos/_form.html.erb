<%= form_for([@match, @photo]) do |f| %>
  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@photo.errors.count, 'error') %>
              prohibited this photo from being saved:
      </h2>

      <ul>
      <% @photo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="jumbotron">
  <div class="text-primary text-center text-big">
    <%= "#{@match.first_team.name} Vs #{@match.opponent_team.name}" %>
  </div>
</div>

  <div class="form-group">
    <%= f.label :picture, class: 'control-label' %><br>
    <%= f.file_field :picture %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-danger btn-block font-big' %>
  </div>
<% end %>
