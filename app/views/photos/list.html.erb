<div class="container">
    <%if notice %>
        <div class="alert alert-info"><%= notice %></div>
    <% end %>

    <%= link_to 'New Photo', new_photo_path, class: "btn btn-primary", target: "_blank" %>
    <h1>Photos</h1>

    <table class="table table-striped table-condensed table-hover table-responsive">
      <thead>
        <tr>
          <th>Id</th>
          <th>Match id</th>
          <th>Photo url</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @photos.each do |photo| %>
          <tr>
            <td><%= photo.id %></td>
            <td><%= photo.match_id %></td>
            <td><%= photo.photo_url %></td>
            <td><%= link_to 'Check', photo, target: "_blank" %></td>
            <td><%= link_to 'Edit', edit_photo_path(photo), target: "_blank" %></td>
            <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

</div>
