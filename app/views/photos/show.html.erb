<div class="container">
    <div class="row">
        <div class="thumbnail">
            <%= image_tag @photo.photo_url, class: "img-responsive"%>
            <div class="caption text-center">
                <% first_team = Team.find(@photo.match.team1_id) %>
                <% opponent_team = Team.find(@photo.match.team2_id) %>
                <span class="text-pink"><%= first_team.name  %></span> Vs <span class="text-primary"><%= opponent_team.name %></span>
            </div>
        </div> <!-- end of thumbnail -->
    </div>
</div>
