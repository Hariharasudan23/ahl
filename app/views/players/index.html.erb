<div class="container">
  <%if notice %>
    <div class="alert alert-info"><%= notice %></div>
  <% end %>

  <h1>Squad</h1>

  <%= link_to 'New Player', new_player_path, class: 'btn btn-primary',
    target: '_blank' %>

  <table class="table table-striped table-condensed table-hover table-responsive">
    <thead>
      <tr>
        <th>Id</th>
        <th>Photo</th>
        <th>Name</th>
        <th>Age</th>
        <th>Team</th>
        <th>Position</th>
        <th>Goals</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><%= player.id %></td>
          <td><%= image_tag player.photo_url, width: '30' %></td>
          <td><%= player.name %></td>
          <td><%= player.age %></td>
          <td><%= player.team.name %></td>
          <td><%= player.position %></td>
          <td><%= player.goals %></td>
          <td>
            <%= link_to 'Edit', edit_player_path(player), target: '_blank' %>
          </td>
          <td>
            <%= link_to 'Destroy', player, method: :delete,
              data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
