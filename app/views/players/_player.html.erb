<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header text-center">
            <h3><%= @player.name %>&nbsp;<span class="label label-danger">Captain</span></h3>
        </div>
        <div class="modal-body">
            <div class="thumbnail">
                <%= image_tag @player.photo, width: "30%" , class: "img-responsive img-thumbnail" %>
                <div class="caption text-center">
            <p>
              <strong>Name:</strong>
              <%= @player.name %>
            </p>

            <p>
              <strong>Age:</strong>
              <%= @player.age %>
            </p>

            <p>
              <strong>Team id</strong>
              <%= @player.team_id %>
            </p>

            <p>
              <strong>Position:</strong>
              <%= @player.position %>
            </p>

            <p>
              <strong>Goals:</strong>
              <%= @player.goals %>
            </p>
        </div> <!-- caption -->
    </div> <!-- thumbnail -->
        </div> <!-- modal body -->
    </div> <!--modal content -->
</div> <!--modal dialog -->
